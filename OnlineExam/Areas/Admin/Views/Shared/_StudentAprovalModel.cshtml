<body onload="GetCollegeConfig()">
    <div class="form-horizontal">
        <div class="modal fade" id="StudentApprovalModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">College configuration</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <h5 class="col-md-4">
                                Login Student Approval
                            </h5>
                            <div class="col-md-8">
                                <input name="chkIsActive" id="chkIsStudentApproval" class="ace ace-switch ace-switch-5" type="checkbox" checked="checked" tabindex="2" />
                                <span class="lbl"> </span>

                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" id="btnCancel" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="submit" id="btnsubmit" class="btn btn-primary" onclick="UpdateStudentApproval()" tabindex="3"><span class="fa fa-floppy-o" aria-hidden="true">&nbsp;@Admin_Resources.BtnSubmit</span></button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>